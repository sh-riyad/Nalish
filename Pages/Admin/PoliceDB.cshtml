@page
@model Nalish.Pages.Admin.IndexModel
@{
}
<br />
<h2>List of Polices</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Position</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.listPolice)  // looping throug police list
        {
            <tr>
                <td>@user.policeid</td>
                <td>@user.name</td>
                <td>@user.email</td>
                <td>@user.phone</td>
                <td>@user.gender</td>
                <td>@user.position</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Admin/EditPolice?policeid=@user.policeid">Edit</a>
                    <!--  -->
                    <a class="btn btn-primary btn-sm" href="/Admin/DeletePolice?policeid=@user.policeid">Delete</a>
                    <!-- -->
                </td>
            </tr>
        }
    </tbody>
</table>